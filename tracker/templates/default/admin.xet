<?xml version="1.0"?>
<!-- $Id$ -->
<overlay>
	<template id="tracker.admin.cats" template="" lang="" group="0" version="1.9.002">
		<grid width="100%" height="450" overflow="auto">
			<columns>
				<column width="100"/>
				<column/>
				<column/>
				<column width="30%"/>
			</columns>
			<rows>
				<row class="row" valign="top">
					<description value="Categories"/>
					<grid width="100%" height="140" overflow="auto" id="cats">
						<columns>
							<column/>
							<column/>
							<column width="5%"/>
						</columns>
						<rows>
							<row class="th">
								<description value="Name"/>
								<description value="Autoassign to"/>
								<description value="Actions"/>
							</row>
							<row>
								<textbox blur="--&gt; enter new name" id="${row}[name]" size="60" maxlength="150"/>
								<menulist>
									<menupopup id="${row}[autoassign]" no_lang="1" options="Noone"/>
								</menulist>
								<button align="center" statustext="Delete this category" label="Delete" id="delete[$row_cont[id]]" onclick="return confirm('Delete this category');" image="delete"/>
							</row>
						</rows>
					</grid>
				</row>
				<row class="row" valign="top">
					<description value="Versions"/>
					<grid width="100%" height="100" overflow="auto" id="versions">
						<columns>
							<column/>
							<column width="5%"/>
						</columns>
						<rows>
							<row class="th">
								<description value="Name"/>
								<description value="Actions"/>
							</row>
							<row class="row">
								<textbox blur="--&gt; enter new name" id="${row}[name]" size="80" maxlength="150"/>
								<button align="center" statustext="Delete this version" label="Delete" id="delete[$row_cont[id]]" onclick="return confirm('Delete this version');" image="delete"/>
							</row>
						</rows>
					</grid>
				</row>
				<row class="row" valign="top">
					<description value="Status"/>
					<grid width="100%" height="100" overflow="auto" id="statis">
						<columns>
							<column/>
							<column/>
							<column width="5%"/>
						</columns>
						<rows>
							<row class="th">
								<description value="Name"/>
								<description align="center" value="Closed"/>
								<description value="Actions"/>
							</row>
							<row class="row">
								<textbox blur="--&gt; enter new name" id="${row}[name]" size="80" maxlength="150"/>
								<checkbox align="center" id="${row}[closed]"/>
								<button align="center" statustext="Delete this status" label="Delete" id="delete[$row_cont[id]]" onclick="return confirm('Delete this status');" image="delete"/>
							</row>
						</rows>
					</grid>
				</row>
				<row valign="top">
					<description value="Resolution"/>
					<grid width="100%" height="100" overflow="auto" id="resolutions">
						<columns>
							<column/>
							<column/>
							<column width="5%"/>
						</columns>
						<rows>
							<row class="th">
								<description value="Name"/>
								<description align="center" value="Default"/>
								<description value="Actions"/>
							</row>
							<row class="row">
								<hbox>
									<textbox blur="--&gt; enter new name" id="${row}[name]" size="80" maxlength="150"/>
									<description id="${row}[name]" readonly="true"/>
								</hbox>
								<radio align="center" id="isdefaultresolution" options="$row_cont[id]"/>
								<button align="center" statustext="Delete this status" label="Delete" id="delete[$row_cont[id]]" onclick="return confirm('Delete this status');" image="delete"/>
							</row>
						</rows>
					</grid>
				</row>
				<row class="row" valign="top">
					<description value="Canned responses"/>
					<grid width="100%" id="responses">
						<columns>
							<column/>
							<column/>
							<column width="5%"/>
						</columns>
						<rows>
							<row class="th">
								<description value="Name"/>
								<description value="Canned response"/>
								<description value="Actions"/>
							</row>
							<row class="row" valign="top">
								<textbox blur="--&gt; enter new name" id="${row}[name]" size="30"/>
								<textbox multiline="true" id="${row}[description]" rows="3" cols="50"/>
								<button align="center" statustext="Delete this canned response" label="Delete" id="delete[$row_cont[id]]" onclick="return confirm('Delete this canned response');" image="delete"/>
							</row>
						</rows>
					</grid>
				</row>
				<row class="row" valign="top" disabled="!@allow_defaultproject">
					<description value="Assign to project"/>
					<grid width="100%" height="90" overflow="auto" id="projects">
						<columns>
							<column/>
							<column/>
							<column/>
						</columns>
						<rows>
							<row class="th">
								<description value="Name"/>
								<description value="Project selection"/>
								<description value="Actions"/>
							</row>
							<row class="row" valign="top">
								<textbox blur="--&gt; enter new name" id="${row}[name]" size="40" maxlength="40"/>
								<projectmanager-select id="${row}[projectlist]" no_lang="1" options="--&gt; choose a project from the drop-down list"/>
								<button align="center" statustext="Delete this entry" label="Delete" id="delete[$row_cont[id]]" onclick="return confirm('Delete this entry');" image="delete"/>
							</row>
						</rows>
					</grid>
				</row>
			</rows>
		</grid>
	</template>
	<template id="tracker.admin.priorities" template="" lang="" group="0" version="1.5.001">
		<grid width="100%" height="450" id="priorities">
			<columns>
				<column/>
				<column/>
				<column/>
			</columns>
			<rows>
				<row height="20">
					<description value="Category" for="cat_id"/>
					<menulist span="all">
						<menupopup statustext="Changes made below will be lost, if not applied before!" id="cat_id" onchange="1" options="All"/>
					</menulist>
				</row>
				<row class="th" height="20">
					<description value="Value" class="leftPad5"/>
					<description value="Label"/>
					<description align="right" value="Priorities with empty label are not available to the user"/>
				</row>
				<row class="row">
					<description id="${row}[value]" readonly="true" class="leftPad5"/>
					<textbox id="${row}[label]" size="80"/>
					<description id="${row}[label]"/>
				</row>
			</rows>
		</grid>
	</template>
	<template id="tracker.admin.staff" template="" lang="" group="0" version="1.5.001">
		<grid width="100%" height="450" overflow="auto">
			<columns>
				<column width="100"/>
				<column/>
				<column/>
				<column width="30%"/>
