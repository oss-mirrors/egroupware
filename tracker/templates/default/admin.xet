	<template id="tracker.admin" template="" lang="" group="0" version="1.9.004">
		<grid width="100%">
			<columns>
				<column width="1"/>
				<column/>
				<column/>
				<column/>
				<column/>
			</columns>
			<rows>
				<row disabled="!@msg">
